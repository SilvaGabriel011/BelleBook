generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Enumeração de Roles
enum UserRole {
  CUSTOMER
  EMPLOYEE
  ADMIN
}

// Status da Conta
enum AccountStatus {
  ACTIVE
  PENDING_APPROVAL
  SUSPENDED
  REJECTED
}

// Usuárias da plataforma
model User {
  id              String        @id @default(cuid())
  email           String        @unique
  password        String
  name            String
  displayName     String?
  phone           String?
  avatar          String?
  birthDate       DateTime?
  googleId        String?       @unique
  role            UserRole      @default(CUSTOMER)
  accountStatus   AccountStatus @default(ACTIVE)
  timezone        String?
  points          Int           @default(0)
  pointsHistory   String?       // JSON: [{action, points, date, description}]
  googleTokens    String?       // Tokens OAuth do cliente
  googleTokensProvider String?  // Tokens OAuth do prestador
  lastLoginAt     DateTime?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  
  bookings        Booking[]
  reviews         Review[]
  favorites       Service[]     @relation("UserFavorites")
  cart            CartItem[]
  notifications   Notification[]
  employeeProfile EmployeeProfile?
  adminProfile    AdminProfile?
  roleRequests    RoleRequest[]
  approvedRequests RoleRequest[] @relation("ApprovedBy")
  auditLogs       AuditLog[]    @relation("AdminActions")
  sentMessages    ChatMessage[] @relation("SentMessages")
  
  @@map("users")
}

// Categorias de serviços
model Category {
  id          String    @id @default(cuid())
  name        String    @unique
  description String?
  icon        String?
  image       String?
  order       Int       @default(0)
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  
  services    Service[]
  
  @@map("categories")
}

// Serviços oferecidos
model Service {
  id            String    @id @default(cuid())
  categoryId    String
  name          String
  description   String
  duration      Int       // minutos
  price         Decimal
  promoPrice    Decimal?
  images        String    // JSON string com array de URLs
  gender        String?   // FEMININO, MASCULINO, UNISEX
  isActive      Boolean   @default(true)
  isPopular     Boolean   @default(false)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  category      Category  @relation(fields: [categoryId], references: [id])
  bookings      Booking[]
  reviews       Review[]
  favoritedBy   User[]    @relation("UserFavorites")
  cartItems     CartItem[]
  variants      ServiceVariant[]
  
  @@map("services")
}

// Variações de serviços (ex: Unha básica, Unha decorada, etc)
model ServiceVariant {
  id          String   @id @default(cuid())
  serviceId   String
  name        String
  description String?
  price       Decimal
  duration    Int      // minutos
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  service     Service  @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  
  @@map("service_variants")
}

// Pacotes de serviços (múltiplas sessões com desconto)
model ServicePackage {
  id            String   @id @default(cuid())
  name          String
  description   String?
  services      String   // JSON: [{serviceId, variantId?, quantity}]
  packagePrice  Decimal
  sessionsCount Int
  validDays     Int?     // Validade do pacote em dias
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  @@map("service_packages")
}

// Códigos promocionais
model PromoCode {
  id          String   @id @default(cuid())
  code        String   @unique
  type        String   // PERCENTAGE, FIXED
  value       Decimal
  minAmount   Decimal? // Valor mínimo da compra
  maxUses     Int?     // Máximo de usos
  usedCount   Int      @default(0)
  validFrom   DateTime
  validUntil  DateTime
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@map("promo_codes")
}

// Recompensas do programa de fidelidade
model LoyaltyReward {
  id          String   @id @default(cuid())
  name        String
  description String?
  points      Int      // Pontos necessários
  type        String   // DISCOUNT, FREE_SERVICE, UPGRADE
  value       Decimal  // Valor do desconto ou serviço
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@map("loyalty_rewards")
}

// Banners promocionais
model PromoBanner {
  id          String   @id @default(cuid())
  title       String
  description String?
  image       String   // URL da imagem
  link        String?  // Link de destino
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  validFrom   DateTime?
  validUntil  DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@map("promo_banners")
}

// Agendamentos
model Booking {
  id              String    @id @default(cuid())
  userId          String
  serviceId       String    // Serviço principal (para compatibilidade)
  providerId      String?   // Profissional que prestará o serviço
  services        String?   // JSON: [{serviceId, variantId?, quantity, price}]
  date            DateTime
  time            String    // Horário do agendamento (HH:mm)
  duration        Int?      // Duração total em minutos
  status          String    @default("PENDING") // PENDING, CONFIRMED, COMPLETED, CANCELLED
  paymentStatus   String    @default("PENDING") // PENDING, PAID, REFUNDED
  paymentMethod   String?   // CREDIT_CARD, DEBIT_CARD, PIX, CASH, LOYALTY_POINTS
  paymentId       String?   // ID do payment intent do Stripe
  totalPaid       Decimal
  discount        Decimal   @default(0)
  promoCode       String?
  notes           String?   // Notas do cliente
  googleEventId   String?   // ID do evento na agenda do cliente
  googleProviderEventId String? // ID do evento na agenda do prestador
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  user            User      @relation(fields: [userId], references: [id])
  service         Service   @relation(fields: [serviceId], references: [id])
  review          Review?
  reminders       Reminder[]
  
  @@map("bookings")
}

// Carrinho de compras
model CartItem {
  id        String    @id @default(cuid())
  userId    String
  serviceId String
  quantity  Int       @default(1)
  addedAt   DateTime  @default(now())
  
  user      User      @relation(fields: [userId], references: [id])
  service   Service   @relation(fields: [serviceId], references: [id])
  
  @@unique([userId, serviceId])
  @@map("cart_items")
}

// Avaliações
model Review {
  id        String    @id @default(cuid())
  userId    String
  serviceId String
  bookingId String    @unique
  rating    Int       // 1-5 estrelas
  comment   String?
  images    String?   // JSON string com array de URLs
  createdAt DateTime  @default(now())
  
  user      User      @relation(fields: [userId], references: [id])
  service   Service   @relation(fields: [serviceId], references: [id])
  booking   Booking   @relation(fields: [bookingId], references: [id])
  
  @@map("reviews")
}

// Notificações
model Notification {
  id        String    @id @default(cuid())
  userId    String
  type      String    // BOOKING_REMINDER, REVIEW_REQUEST, PROMOTION, etc
  title     String
  message   String
  isRead    Boolean   @default(false)
  createdAt DateTime  @default(now())
  
  user      User      @relation(fields: [userId], references: [id])
  
  @@map("notifications")
}

// Lembretes (para filas)
model Reminder {
  id        String    @id @default(cuid())
  bookingId String
  type      String    // EMAIL, WHATSAPP, PUSH
  sentAt    DateTime?
  createdAt DateTime  @default(now())
  
  booking   Booking   @relation(fields: [bookingId], references: [id])
  
  @@map("reminders")
}

// Perfil de Employee (profissional)
model EmployeeProfile {
  id              String   @id @default(cuid())
  userId          String   @unique
  specialties     String   // JSON array de especialidades: ["unha", "sobrancelha"]
  bio             String?
  workSchedule    String   // JSON com horários de trabalho estruturados
  rating          Float    @default(0)
  totalServices   Int      @default(0)
  isAvailable     Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("employee_profiles")
}

// Perfil de Admin
model AdminProfile {
  id              String   @id @default(cuid())
  userId          String   @unique
  permissions     String   // JSON array de permissões específicas
  department      String?  // Ex: "Operações", "Financeiro", "TI"
  isSuperAdmin    Boolean  @default(false) // Top-level admin
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("admin_profiles")
}

// Solicitações de mudança de role
model RoleRequest {
  id              String        @id @default(cuid())
  userId          String
  requestedRole   UserRole
  currentRole     UserRole
  status          String        @default("PENDING") // PENDING, APPROVED, REJECTED
  requestReason   String        // Justificativa do usuário
  adminNotes      String?       // Notas do admin que analisou
  
  approvedById    String?
  approvedAt      DateTime?
  
  user            User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  approvedBy      User?         @relation("ApprovedBy", fields: [approvedById], references: [id])
  
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  
  @@map("role_requests")
}

// Audit Log - Rastreamento de ações administrativas
model AuditLog {
  id          String   @id @default(cuid())
  adminId     String
  action      String   // APPROVE_ROLE_REQUEST, SUSPEND_USER, CANCEL_BOOKING, etc
  resource    String   // User, Booking, Service, etc
  resourceId  String
  changes     String?  // JSON com detalhes das mudanças
  ipAddress   String?
  userAgent   String?
  createdAt   DateTime @default(now())
  
  admin       User     @relation("AdminActions", fields: [adminId], references: [id])
  
  @@index([adminId])
  @@index([resource, resourceId])
  @@index([createdAt])
  @@map("audit_logs")
}

// Conversas de Chat
model ChatConversation {
  id              String        @id @default(cuid())
  participantIds  String        // JSON array de IDs dos participantes
  lastMessageAt   DateTime      @default(now())
  relatedBookingId String?
  tags            String?       // JSON array: ['urgent', 'complaint', 'rescheduling']
  status          String        @default("ACTIVE") // ACTIVE, ARCHIVED, CLOSED
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  
  messages        ChatMessage[]
  
  @@map("chat_conversations")
}

// Mensagens de Chat
model ChatMessage {
  id              String           @id @default(cuid())
  conversationId  String
  senderId        String
  content         String
  attachments     String?          // JSON array de URLs
  isRead          Boolean          @default(false)
  readAt          DateTime?
  createdAt       DateTime         @default(now())
  
  conversation    ChatConversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  sender          User             @relation("SentMessages", fields: [senderId], references: [id])
  
  @@index([conversationId])
  @@index([senderId])
  @@index([createdAt])
  @@map("chat_messages")
}
